                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkCyan"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkSlateGray"></Button>

                </WrapPanel>
            </Border>

            <TextBlock Text="浅色文本" Style="{StaticResource MinPage_Header}" Margin="0,20,0,0" Focusable="False"></TextBlock>
            <Border Padding="5" Background="White"  Focusable="False">
                <!--<Border Padding="5" Background="{Binding Foreground,ElementName=C}" >-->
