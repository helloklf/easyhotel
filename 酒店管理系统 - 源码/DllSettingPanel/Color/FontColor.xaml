                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DeepSkyBlue"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="CornflowerBlue"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DodgerBlue"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="Blue"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkMagenta"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="BlueViolet"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkOrchid"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkViolet"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkBlue"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="Indigo"></Button>

                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkGray"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DimGray"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="Black"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkOliveGreen"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkGreen"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkKhaki"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="Goldenrod"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkGoldenrod"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="Gold"></Button>
                    <Button Content="" Style="{StaticResource ColorSelect}" Background="DarkOrange"></Button>
