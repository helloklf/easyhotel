<UserControl x:Class="Project_Term2_Staff.HelpInfo" Foreground="{Binding ForeColor}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
        <StackPanel>
            <TextBlock FontSize="20" Padding="25" Foreground="{Binding Foreground,ElementName=C}">关于员工管理：</TextBlock>
            <TextBlock TextWrapping="Wrap" Padding="20,0,20,0" FontSize="17" Foreground="{Binding Foreground,ElementName=C}" Margin="35">
                            　　员工系统关系到整个管理系统的正常运行，是不可或缺的部分。添加员工：登记员工的基本信息。查看员工：查看员工的个人信息，双击列表中的项目可以修改。在职员工：为在职员工分配登录账号、设置权限、职务。关于权限的更多描述，请参考功能块“权限管理”中的说明。
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
