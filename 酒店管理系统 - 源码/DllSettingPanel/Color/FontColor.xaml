        <Border Height="2" BorderBrush="{Binding  Background,ElementName=C}" BorderThickness="2" Margin="0" Focusable="False"></Border>
        <StackPanel Margin="10">
            <TextBlock Text="深色文本" Style="{StaticResource MinPage_Header}" Margin="0" Focusable="False"></TextBlock>
            <Border Padding="5" Background="White">
                <!--<Border Padding="5" Background="{Binding Foreground,ElementName=C}">-->
