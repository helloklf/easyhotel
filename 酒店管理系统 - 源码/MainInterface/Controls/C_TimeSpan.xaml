<UserControl x:Class="Project_Term2.Controls.C_TimeSpan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="SysDTStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="30" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Opacity" Value="0.3" />
                <Setter Property="Foreground" Value="{Binding Foreground, ElementName=C}" />
            </Style>
        </StackPanel.Resources>
        <TextBlock Name="SysDate" Style="{DynamicResource SysDTStyle}" />
        <TextBlock Name="SysTime" Style="{DynamicResource SysDTStyle}" />
    </StackPanel>
</UserControl>
